<h2 class="listTitle">Available drones</h2>
<div class="row row-cols-1 row-cols-md-3">
      {{#each dronesArray}}
      <div class="col mb-4">
      <div class="card">
         <img src="/images/drone.jpg" class="card-img-top" alt="{{this.name}}">
         <div class="card-body">
            <h5> {{this.name}} </h5>
            <p>Propellers : {{this.propellers}}</p>
            <p>Maximum Speed : {{this.maxSpeed}} m/sec</p>
            <div id="listButtons">
               <a href="/drones/{{this._id}}/edit"><button type="submit" class="btn btn-dark">Edit</button></a>
               <form method="POST" action="/drones/{{this._id}}/delete"><button type="submit"
                     class="btn btn-dark">Delete</button></form>
            </div>
         </div>
      </div>
   </div>
   {{/each}}
</div>

